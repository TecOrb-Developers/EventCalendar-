<?xml version="1.0" encoding="utf-8"?>
                                                            

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_white_top_round"
        android:orientation="vertical" android:tag="layout/dialog_calender_view_0" xmlns:app="http://schemas.android.com/apk/res-auto">
        <androidx.cardview.widget.CardView
            android:id="@+id/frame_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_white_top_less_round"
            app:cardBackgroundColor="@android:color/transparent"
            app:cardElevation="@dimen/dp_10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/bg_white_top_less_round">
                <View
                    android:layout_width="@dimen/dp_50"
                    android:layout_height="@dimen/dp_4"
                    android:background="@drawable/bg_dark_gray"
                    android:layout_marginTop="@dimen/dp_15">
                </View>
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginLeft="@dimen/dp_16"
                    android:layout_marginRight="@dimen/dp_16"
                    android:layout_marginTop="@dimen/dp_10">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_calender_view"
                        android:textSize="@dimen/dp_16"
                        android:paddingLeft="@dimen/dp_10"
                        android:layout_gravity="center"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:textColor="@color/colorLightBlack"/>
                    <ImageView
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        android:src="@drawable/sel_calendar"
                        android:onClick="onClick"
                        android:padding="@dimen/dp_5"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/tvDay"
                        app:layout_constraintStart_toStartOf="@+id/tvDay"
                        android:id="@+id/imageDay"/>
                    <TextView
                        android:id="@+id/tvDay"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="@string/txt_day"
                        android:textSize="@dimen/dp_16"
                        android:textStyle="bold"
                        android:layout_marginEnd="@dimen/dp_25"
                        android:layout_gravity="center"
                        app:layout_constraintEnd_toStartOf="@+id/tvThreeDays"
                        app:layout_constraintTop_toBottomOf="@+id/imageDay"
                        android:textColor="@color/colorLightBlack"/>
                    <ImageView
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        android:src="@drawable/sel_calendar"
                        android:onClick="onClick"
                        android:padding="@dimen/dp_5"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/tvThreeDays"
                        app:layout_constraintStart_toStartOf="@+id/tvThreeDays"
                        android:id="@+id/imageThreeDays"/>
                    <TextView
                        android:id="@+id/tvThreeDays"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="3 Days"
                        android:textStyle="bold"
                        android:textSize="@dimen/dp_16"
                        android:layout_gravity="center"
                        android:layout_marginEnd="@dimen/dp_25"
                        app:layout_constraintEnd_toStartOf="@+id/tvWeek"
                        app:layout_constraintTop_toBottomOf="@+id/imageThreeDays"

                        android:textColor="@color/colorLightBlack"/>
                    <ImageView
                        android:layout_width="@dimen/dp_40"
                        android:layout_height="@dimen/dp_40"
                        android:src="@drawable/sel_calendar"
                        android:onClick="onClick"
                        android:padding="@dimen/dp_5"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="@+id/tvWeek"
                        app:layout_constraintStart_toStartOf="@+id/tvWeek"
                        android:id="@+id/imageWeek"/>

                    <TextView
                        android:id="@+id/tvWeek"
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="week"
                        android:textStyle="bold"
                        android:textSize="@dimen/dp_16"
                        android:layout_marginEnd="@dimen/dp_15"
                        android:layout_gravity="center"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/imageWeek"
                        android:textColor="@color/colorLightBlack"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/AllSpecialist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/all_staff"
                    android:textStyle="bold"
                    android:textSize="@dimen/dp_16"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_5"
                    android:paddingBottom="@dimen/dp_5"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_gravity="center"
                    android:textColor="@color/black"/>
                <TextView
                    android:id="@+id/tvSpecialist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_specialist"
                    android:textStyle="bold"
                    android:textSize="@dimen/dp_16"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_5"
                    android:visibility="gone"
                    android:paddingBottom="@dimen/dp_5"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_gravity="center"
                    android:textColor="@color/orange"/>

                <androidx.core.widget.NestedScrollView
                    android:id="@+id/scrollView"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginEnd="@dimen/dp_10"
                    android:fillViewport="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/galleryRec"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingEnd="@dimen/dp_16"
                            android:layout_marginBottom="@dimen/dp_10"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                    </LinearLayout>
                </androidx.core.widget.NestedScrollView>
                <TextView
                    android:id="@+id/tvDone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Done"
                    android:textStyle="bold"
                    android:textSize="@dimen/dp_16"
                    android:paddingLeft="@dimen/dp_10"
                    android:paddingTop="@dimen/dp_5"
                    android:visibility="gone"
                    android:gravity="center"
                    android:paddingBottom="@dimen/dp_5"
                    android:layout_marginBottom="@dimen/dp_10"
                    android:layout_marginStart="@dimen/dp_10"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_gravity="center"
                    android:textColor="@color/orange"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
         